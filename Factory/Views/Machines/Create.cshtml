@{
  Layout = "_Layout";
}
@model Factory.Models.Machine
<div class="container">
  <h4>Add a new Machine</h4>
  <div class="table">
    @using (Html.BeginForm())
    {
      @Html.LabelFor(model => model.Name)
      @Html.TextBoxFor(model => model.Name, new { @class="form-control", @required="required"})
      <br>
      @Html.LabelFor(model => model.Description)
      @Html.TextBoxFor(model => model.Description, new {@class="form-control", @required="required"})
      <br>
      <div>
        @Html.Label("Select Engineer")
      </div>
      <div class="form-control">
        @Html.DropDownList("EngineerId")
      </div>
      <div style="height: 30px;"></div>
      <input type="submit" value="Add new Machine" class="btn btn-primary" />
    }
  </div>
  <div style="display: inline-block; padding: 7px;">
    <p>@Html.ActionLink("Show all machines", "Index")</p>
  </div>
  <div style="display: inline-block; padding: 7px;">
    <p>@Html.ActionLink("Home", "Index", "Home")</p>
  </div>
</div>

@{
  Layout = "_Layout";
}
@model Factory.Models.Engineer

<div class="container">
  <h4>Edit</h4>
  <div class="table">
    @using (Html.BeginForm())
    {
      @Html.HiddenFor(model => model.EngineerId)
      @Html.LabelFor(model => model.Name)
      <div>
        @Html.EditorFor(model => model.Name, new {@class="form-control", @required="required"})
      </div>
      <br>
      @Html.LabelFor(model => model.HireDate)
      <div>
        @Html.EditorFor(model => model.HireDate, new {@class="form-control", @type="date", @required="required"})
      </div>
      <br>
      @Html.Label("Add a machine")
      <div>
        @Html.DropDownList("MachineId")
      </div>
      <input type="submit" class="btn btn-success" value="Save" />
    }
  </div>
  <div style="display: inline-block; padding-right: 7px;">
    <p>@Html.ActionLink("Back to list", "Index")</p>
  </div>
  <div style="display: inline-block; padding-right: 7px;">
    <p>@Html.ActionLink("Home", "Index", "Home")</p>
  </div>
</div>
